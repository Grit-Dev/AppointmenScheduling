@model AppointmentScheduling.Models.ViewModels.LoginViewModel

<h2>Sign in</h2>

<div class="row">
    <div class="col-md-8">
       <section id="loginForm">
           <form id="account" method="post" asp-action="Login" asp-controller="Account">
               <h4>Use your email and password to login</h4>
               <hr />
               <div asp-validation-summary="All" class="text-danger"></div>
               <div class="form-group row">
                   <label class="col-md-2" asp-for="Email"></label>
                   <span asp-validation-for="Email" class="text-danger"></span>
               </div>
                <div class="form-group">
                   <label class="col-md-2 row" asp-for="Password"></label>
                   <span asp-validation-for="Password" class="text-danger"></span>
               </div>
                  <div class="form-group">
                   <label class="col-md-10 offset-md-2 checkbox" asp-for="RememberMe">
                   <input asp-for="RememberMe"/>
                   </label>
                   Remember me?
               </div>

               <div class="form-group">
                   <div class="col-md-10 offset-md-2">
                       <input type="submit" value="Login" class="btn btn-success" />
                   </div>
                   <div class="col-md-10 offset-md-2">
                      <a asp-action="Register">Sign up</a>
                   </div>
               </div>
            
           </form>
       </section>
    </div>
</div>